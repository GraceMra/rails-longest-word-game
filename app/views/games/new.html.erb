<h1>New game</h1>
<br>
<div class="container">
  <div class="flex">
      <% @letters.each do |letter| %>
      <p><strong><%= letter %></strong></p>
    <% end %>
  </div>
</div>
<br>
<h4><strong>What is the longest word you can find?</strong></h4>
<form class="form-inline" action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-control" type="text" name="name" placeholder="Your longest word">
  <input class="btn btn-primary mb-2" type="submit">
</form>
